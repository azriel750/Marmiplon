<%- include("../partials/head", {title: "Welcome Bon Plated" }) %>

<div class="container">
 <h1 class="recipe"><%= recipe.title %></h1>
 <p><%= recipe.description %></p>

<h3>Ingredients</h3>
<p><%= recipe.recipeId %></p>
<p><%= recipe.ingredientsWithDetails %></p>

<% ingredientsWithDetails.forEach((ingredientsWithDetail) => { %>
         
<div class="ingredients">
<p><%= ingredientsWithDetail.name %></p>
<p><%= ingredientsWithDetail.quantity %></p>
</div>
    <% }) %>
      

<h3>Steps</h3>    
<div class="container">

<ul>
<% stepInstructions.forEach(function(instruction) { %>
<li><strong>Étape <%= instruction.step %>:</strong> <br> <%= instruction.description %></li>
        <% }) %>
        </ul>

        
        <h3>Commentaires</h3>
        <ul>
        <% stepComment.forEach(function(comment) { %>
            <li>
            <strong>Commentaire #<%= comment.id %></strong><br>
            <%= comment.content %><br>
            <% if (comment.author) { %>
                <em>– <%= comment.author %></em>
            <% } %>
            </li>
        <% }) %>
        </ul>
        
   
</div>



    </div>
</div>

    <%- include ("../partials/footer") %>